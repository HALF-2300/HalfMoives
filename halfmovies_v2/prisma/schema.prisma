generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String            @id @default(cuid())
  email        String            @unique
  name         String?
  passwordHash String?
  isActive     Boolean           @default(true)
  favorites    Favorite[]
  reviews      Review[]
  preferences  UserPreferences?
  createdAt    DateTime          @default(now())
}

model Movie {
  id          String             @id @default(cuid())
  title       String
  overview    String?
  poster      String?
  language    String             @default("en")
  year        Int?
  rating      Float?
  popularity  Int?               @default(0)
  isFeatured  Boolean            @default(false)
  categories  CategoryOnMovies[]
  reviews     Review[]
  favorites   Favorite[]
  createdAt   DateTime           @default(now())
}

model Category {
  id     String             @id @default(cuid())
  name   String             @unique
  movies CategoryOnMovies[]
}

model CategoryOnMovies {
  movieId    String
  categoryId String
  movie      Movie    @relation(fields: [movieId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@id([movieId, categoryId])
}

model Review {
  id        String   @id @default(cuid())
  userId    String
  movieId   String
  rating    Int
  content   String?
  sentiment String?
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  movie Movie @relation(fields: [movieId], references: [id])
}

model Favorite {
  userId    String
  movieId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id])
  movie Movie @relation(fields: [movieId], references: [id])

  @@id([userId, movieId])
}

model UserActivity {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}

model UserPreferences {
  id             String   @id @default(cuid())
  userId         String   @unique
  moods          String[] @default([])
  favoriteGenres String[] @default([])
  languages      String[] @default([])
  prefVector     Json?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User     @relation(fields: [userId], references: [id])
}

model AiLog {
  id        String   @id @default(cuid())
  userId    String?
  count     Int      @default(1)
  latency   Int?
  createdAt DateTime @default(now())
}
